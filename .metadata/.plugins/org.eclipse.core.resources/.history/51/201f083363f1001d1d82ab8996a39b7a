
public class Array04 {

	public static void main(String[] args) {
		
		int [] arr = {1,0,2,3,0,4,5,0};
		
		duplicateZeros(arr);

	}
	
    public static void duplicateZeros(int[] arr) {
        
    	int [] newArr = new int [arr.length-1];
    	
    	for(int i = 0;i<arr.length;i++) {
    		
    		if(arr[i]==0) {
    			
    			arr[i+1] = arr[i];
 
    		}

    		
    	}
    	
    }

}
